#!/usr/bin/env bash

REPO_DIR=${REPO_DIR:-"$HOME/Repositories"}
cd $REPO_DIR
repos=(
  fout/fout
  fout/fout_logs
  fout/fout_infra
  fout/fout_fm
  fout/fout_ui
  fout/fout_hubot
  fout/fout_webhook
  fout/fout_analysis
  fout/fout_ukigumo
  fout/fout_notebooks
  fout/fout_crawler
  fout/fout_text_labeler
  doiken/fout_sandbox
  doiken/cpp_test
  doiken/perl
  doiken/python
)
for r in ${repos[@]}; do
    git clone "git@github.com:${r}.git" 2>&1 | grep -v 'already exists'
done

##
## App
##
brew bundle --file ~/dotfiles/Brewfile.fout &

##
## for fout perl
##
# brew install perl-build broken for now
# https://qiita.com/narita_cpp/items/03e55b9acf4b3fbed99c
git clone git://github.com/tokuhirom/Perl-Build.git ~/.plenv/plugins/perl-build/ 2>&1 | grep -v 'already exists'

cd $REPO_DIR/fout

# build 5.24.3 ~> carton install
# http://tweeeety.hateblo.jp/entry/2015/06/21/203144
PATTERN=`plenv versions | cut -d' ' -f 2 | xargs echo | perl -pe 's/ /|/g'`
{
  if [ "$(egrep -v $PATTERN <(echo 5.24.3))" != "" ]; then
    plenv install 5.24.3
    plenv local 5.24.3
    plenv install-cpanm
    plenv exec cpanm Module::Install
    plenv exec cpanm Carton
    # not required so far
    # plenv exec carton install
  fi
} &

# for fout box
docker_env=(
  fout
  fout_logs
)
{
  for env in ${docker_env[@]}; do
    cd ~/fout_sandbox/unittest/$env
    docker-compose up -d
    docker-compose exec perl /bin/bash -lc /unittest/setup.sh
    docker-compose down
  done
} &

# hammerspoon
{
  for f in $(echo ~/.hammerspoon/fout/*); do
		ln -s $f ~/.hammerspoon/Spoons/$(basename $f)
  done
} &

~/bin/pmset.sh 25 0

wait
